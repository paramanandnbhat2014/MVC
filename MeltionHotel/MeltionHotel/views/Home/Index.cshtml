@Scripts.Render("~/Scripts/bootstrap.js")
@Scripts.Render("~/Scripts/bootstrap.min.js")
@Scripts.Render("~/Scripts/bootstrap-carousel.js")
@Scripts.Render("~/Scripts/home.js")
@Scripts.Render("~/Scripts/GoogleAjax.js")
@Scripts.Render("https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js")

@{
    ViewBag.Title = "Home Page";
}
@section featured {
    <div class="slide">
        <!--slider-->
        <div id="slider" class="carousel slide">
            <div class="carousel-inner">
                <!-- slider container-->

                <div class="item active">

                    <!-- slider 1-->
                    <img src="@Url.Content("~/Images/Tommas.jpg")">
                    <div class="container">
                        <div class="carousel-caption">
                            <h4>Headline for image 1</h4>
                            <p>Description of image 1</p>
                        </div>
                    </div>
                </div>
                <!-- end of slider 1-->

                <div class="item">
                    <!--slider 2-->
                    <img src="@Url.Content("~/Images/Tommas2.jpg")" alt="no pic">
                    <div class="container">
                        <div class="carousel-caption">
                            <h4>Headline for image 2</h4>
                            <p>Description of image 2</p>
                        </div>
                    </div>
                </div>
                <!-- end of slider 2-->

                <div class="item">
                    <!--slider 3-->
                    <img src="@Url.Content("~/Images/Tommas3.jpg")">
                    <div class="container">
                        <div class="carousel-caption">
                            <h4>Headline for image 3</h4>
                            <p>Description of image 3</p>
                        </div>
                    </div>
                </div>
                <!-- end of slider 3-->

            </div>
            <!-- end of slider container-->

            <a class="left carousel-control" href="#slider" data-slide="prev">&lsaquo;</a>
            <a class="right carousel-control" href="#slider" data-slide="next">&rsaquo;</a>

        </div>
        <!-- end of slider-->
    </div>
}

